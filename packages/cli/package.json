{
  "name": "@rease/cli",
  "version": "0.0.1",
  "description": "WIP: rease-cli",
  "author": "cftcview <cftcview@gmail.com>",
  "homepage": "https://github.com/wareset/rease/tree/main/packages/cli#readme",
  "license": "MIT",
  "main": "index",
  "module": "index.mjs",
  "types": "index.d.ts",
  "bin": {
    "rease": "./rease"
  },
  "files": [
    "README.md",
    "__types__",
    "bin",
    "compile",
    "index.d.ts",
    "index.js",
    "index.mjs",
    "node-compile",
    "rease"
  ],
  "keywords": [
    "rease-cli"
  ],
  "scripts": {
    "dester": "dester ./src ./ --types __types__",
    "test": "jest --",
    "rease": "./rease",
    "build": "rm -rf ./__types__ && rm -rf ./bin && rm -rf ./compile && rm -rf ./node-compile && npm run -s dester",
    "dev": "npm run -s dester -- -w",
    "pkg:name": "cat package.json | grep '\"name\":' | cut -d '\"' -f4",
    "pkg:version": "cat package.json | grep '\"version\":' | cut -d '\"' -f4",
    "git:get:tag": "echo $(npm run -s pkg:name)@$(npm run -s pkg:version)",
    "git:set:tag": "t=$(npm run -s git:get:tag) && git tag -a $t -m $t",
    "git:commit": "npm run -s build && git add . && read -p 'Commit: ' c; c=${c:-v$(npm run -s pkg:version)} && n=$(npm run -s pkg:name) && git commit -m \"$n: $c\"",
    "commit": "read -p 'Version [patch]: ' V; V=${V:-patch} && npm version --force --no-git-tag-version $V; echo $V && read -p 'Push? (y/N): ' G && read -p 'Publish? (y/N): ' P && npm run -s git:commit && case $G in Y|y) $(git push);; esac && case $P in Y|y) $(npm run -s git:set:tag && git push --tags && npm -s publish);; esac"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wareset/rease.git"
  },
  "bugs": {
    "url": "https://github.com/wareset/rease/issues"
  },
  "peerDependencies": {
    "less": "3.x",
    "pug": "3.x",
    "sass": "1.x",
    "stylus": "0.x",
    "typescript": "4.x"
  },
  "peerDependenciesMeta": {
    "less": {
      "optional": true
    },
    "sass": {
      "optional": true
    },
    "stylus": {
      "optional": true
    },
    "pug": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "enum-chars": "1.1.1",
    "kleur": "^4.1.3",
    "minimist": "^1.2.5",
    "rastree": "0.0.1",
    "wareset-utilites": "0.1.0"
  },
  "devDependencies": {
    "less": "3.x",
    "pug": "3.x",
    "sass": "1.x",
    "stylus": "0.x",
    "typescript": "4.x"
  }
}
